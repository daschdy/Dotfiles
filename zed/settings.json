{
    "icon_theme": "Zed (Default)",
    "theme": "Gruvbox Dark Hard",
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "vim_mode": true,
    "relative_line_numbers": true,
    "autosave": "on_focus_change",
    "use_autoclose": false,
    "format_on_save": "on",
    "formatter": "language_server",
    "ui_font_size": 14.5,
    "ui_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_size": null,
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "tab_size": 4,
    "cursor_blink": false,
    "scrollbar": {
        "show": "never"
    },
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false
    },
    "terminal": {
        "working_directory": "current_project_directory",
        "font_family": "JetBrainsMono Nerd Font"
    },
    "project_panel": {
        "button": true,
        "dock": "left",
        "git_status": true,
        "default_width": 200
    },
    "restore_on_startup": "none",
    "collaboration_panel": {
        "button": true
    },
    "notification_panel": {
        "button": false
    },
    "agent": {
        "version": "2",
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4o"
        },
        "button": true
    },
    "edit_predictions": {
        "mode": "subtle"
    },
    "indent_guides": {
        "enabled": true
    },
    "centered_layout": {
        "left_padding": 0.15,
        "right_padding": 0.15
    },
    "languages": {
        "C": {
            "tab_size": 4
        },
        "CPP": {
            "tab_size": 4
        }
    }
}
